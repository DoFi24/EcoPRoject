<Window x:Class="RegistrationClinik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegistrationClinik"
        mc:Ignorable="d" KeyUp="Window_KeyUp"
        xmlns:mt="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:RegistrationClinik.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowVIewModel}"
        Title="MainWindow" Height="1080" Width="1920" 
        WindowState="Maximized" WindowStyle="None" ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <TextBlock Text="" VerticalAlignment="Center" HorizontalAlignment="Center"
                       Grid.ColumnSpan="3" FontSize="24"/>
            <Button Content="X" Height="30"  VerticalAlignment="Center" HorizontalAlignment="Right"
                    Grid.ColumnSpan="3" VerticalContentAlignment="Center" Width="30" FontSize="18" Margin="0 0 20 0"
                    Background="Red" Foreground="White" Click="Close" Padding="0 0 0 3"/>
            <Button Content="⬜" Height="30"  VerticalAlignment="Center" HorizontalAlignment="Right"
                    Grid.ColumnSpan="3" Width="30" FontSize="22" Margin="0 0 60 0"
                    Background="White" Foreground="Black" Click="Minimize" Padding="0 0 0 5"/>
            <Button Content="___" Height="30"  VerticalAlignment="Center" HorizontalAlignment="Right"
                    Grid.ColumnSpan="3" Width="30" FontSize="18" Margin="0 0 100 0"
                    Background="White" Foreground="Black" Click="Minimize" Padding="0 0 0 5"/>
            <Grid HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.6*" />
                </Grid.ColumnDefinitions>
                <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}" mt:HintAssist.Hint="Поиск" 
                         Width="500" Margin="10 0 10 0" Height="40" Padding="20 0 0 0" 
                         HorizontalAlignment="Center" VerticalContentAlignment="Center" 
                         VerticalAlignment="Center" FontSize="18"/>
                <Button Grid.Column="2" Width="100" Height="40" Content="поиск" Command="{Binding Create}"/>
                
            </Grid>
            <Grid Grid.Row="1" Grid.Column="0">
                <Button Grid.Column="1" Height="40"  Width="350" Content="Добавить" Padding="0" Click="showAddPage"/>
            </Grid>
            <StackPanel HorizontalAlignment="Right" Grid.Row="1" Orientation="Horizontal" Grid.Column="2">
                <Button Grid.Column="1" Width="150" Margin="10 0 10 0" Content="Добавить фильтер" Padding="0" Click="showAddFilter" Cursor="Hand"/>
                <Button Grid.Column="1" Width="150" Margin="10 0 10 0" Content="Добавить картридж" Padding="0" Click="showAddKartij"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <DataGrid ItemsSource="{Binding DBTables}" CanUserAddRows="False" 
                      RowBackground="#FFF1F1F1" AlternatingRowBackground="White" 
                      AutoGenerateColumns="False" FontSize="16" BorderThickness="0" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Binding="{Binding Id}" Width="0.2*"/>
                    <DataGridTextColumn Header="Ф.И.О." Binding="{Binding Name}" Width="0.7*"/>
                    <DataGridTextColumn Header="Номер телефона" Binding="{Binding PhoneNumber}" Width="0.4*"/>
                    <DataGridTextColumn Header="Адресс" Binding="{Binding Adres}" Width="0.6*"/>
                    <DataGridTextColumn Header="Дата утановки" Binding="{Binding StartTimer}" Width="0.3*"/>
                    <DataGridTextColumn Header="Окнчание срока" Binding="{Binding EndTimer}" Width="0.3*"/>
                    <DataGridTextColumn Header="Модель" Binding="{Binding Model.Name}" Width="0.4*"/>
                    <DataGridTemplateColumn Header="Изменить"  Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Изменить"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
